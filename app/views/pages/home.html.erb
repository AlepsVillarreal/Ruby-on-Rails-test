<div class="home-callout text-center container-fluid">
  <h1>Administración de asistencias</h1>
</div>
<div class="container home-signup-links">
  <div class="row">
    
    
    <% if user_signed_in? %>
      
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center"> Perfil propio</h2> 
          <!--Si el usuario ha creado un perfil -->
          <% if current_user.profile %> 
            <%= link_to "Edita tu perfil", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
            <%= link_to "Ver tu perfil", user_path(id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <% else %>
            <p class="text-center">Crear tu perfil para agregarlo a la comunidad </p>
            <%= link_to "Crear tu perfil!", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center"> La comunidad</h2>
          <p class="text-center">Realiza consultas de personas en la comunidad</p>
          <%= link_to "Visita la comunidad", users_path, class: 'btn btn-default btn-lg btn-block' %>
        </div>
      </div>
    <% else %>
      <div class="col-md-12">
        <div class="well">
          <h2 class="text-center">Inicia sesión para utilizar el software</h2>
          <br/>
          <%= link_to "Registrate", new_user_registration_path(plan: @basic_plan.id) , class: 'btn btn-primary btn-md btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
                                                                  
  
</div>